<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanelActivity"
    android:orientation="vertical"
    android:gravity="center">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addowner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/button_bg"
        android:fontFamily="@font/amethysta"
        android:text="Add Owner"
        android:textColor="@color/white"
        android:theme="@style/MatButtonSourceCodse"
        app:cornerRadius="20dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/getownerlist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/button_bg"
        android:fontFamily="@font/amethysta"
        android:text="Get Owner List"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:theme="@style/MatButtonSourceCodse"
        app:cornerRadius="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addads"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/button_bg"
        android:fontFamily="@font/amethysta"
        android:text="Add Advertisement"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:theme="@style/MatButtonSourceCodse"
        app:cornerRadius="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aceptbillesc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/button_bg"
        android:fontFamily="@font/amethysta"
        android:text="Accept Bill Escapers"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:theme="@style/MatButtonSourceCodse"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/all_billescapers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/button_bg"
        android:fontFamily="@font/amethysta"
        android:text="Delete/Edit Bill Escapers"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:theme="@style/MatButtonSourceCodse"
        app:cornerRadius="20dp" />



</LinearLayout>