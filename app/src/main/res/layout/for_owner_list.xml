<?xml version="1.0" encoding="utf-8"?>
<io.armcha.elasticview.ElasticView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vender_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D000000">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/dummylogo"
            app:civ_border_color="#000"
            app:civ_border_width="3dp"
            android:elevation="8dp"
            android:layout_margin="8dp"
            android:id="@+id/img"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/img">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="owner_name"
                android:id="@+id/p_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="address"
                android:id="@+id/p_address"
                android:textStyle="bold"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/p_neyojakavargam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="neyojakavargam"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Created On"
                android:id="@+id/p_creaed_on"
                android:textStyle="bold"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
    </RelativeLayout>
</io.armcha.elasticview.ElasticView>